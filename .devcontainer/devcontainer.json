{
  "name": "Lexi Demo Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
  "postCreateCommand": "curl -L https://github.com/andrialexandrou/lexi/raw/main/release/v1.0.0/lexi-linux -o /tmp/lexi && chmod +x /tmp/lexi && sudo mv /tmp/lexi /usr/local/bin/lexi",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false
    }
  },
  "postStartCommand": "sudo apt-get update && sudo apt-get install -y g++ build-essential"
}
