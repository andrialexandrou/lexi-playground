{
  "name": "Lexi Demo Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
  "postCreateCommand": "chmod +x /workspaces/lexi-playground/release/v1.0.0/lexi-linux && sudo ln -s /workspaces/lexi-playground/release/v1.0.0/lexi-linux /usr/local/bin/lexi",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  }
}
